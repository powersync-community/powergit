{
  "name": "@powersync-community/powergit-daemon",
  "version": "1.2.5",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "dist/daemon/src/index.js",
  "files": [
    "dist/daemon/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm --filter @app/explorer build:daemon && tsc -p tsconfig.json && cp src/worker.js dist/daemon/src/worker.js && node scripts/bundle-explorer-ui.mjs",
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "start:local": "pnpm --workspace-root run dev:daemon -- --profile local-dev",
    "stop:local": "kill $(lsof -t -i:5030)",
    "prepack": "npm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "echo 'stub'",
    "test": "vitest run"
  },
  "dependencies": {
    "@powersync/common": "1.44.0",
    "@powersync/node": "0.15.0",
    "@powersync-community/powergit-core": "workspace:*",
    "@supabase/supabase-js": "^2.48.1",
    "better-sqlite3": "^12.4.1",
    "busboy": "^1.6.0"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.7.5",
    "tsx": "^4.20.6",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  }
}
