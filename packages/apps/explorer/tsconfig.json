{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "vite/client",
      "node",
      "@playwright/test"
    ],
    "paths": {
      "@tanstack/powersync-db-collection": [
        "./src/types/powersync-db-collection"
      ],
      "@tanstack/powersync-db-collection/*": [
        "./src/types/powersync-db-collection"
      ],
      "@ps": [
        "./src/ps/index.ts"
      ],
      "@ps/*": [
        "./src/ps/*"
      ],
      "@tsdb": [
        "./src/tsdb/index.ts"
      ],
      "@tsdb/*": [
        "./src/tsdb/*"
      ]
    }
  },
  "include": [
    "src",
    "tests",
    "playwright.config.ts",
    "vite-env.d.ts"
  ]
}
