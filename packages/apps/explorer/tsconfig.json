{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "vite/client",
      "node",
      "@playwright/test"
    ],
    "paths": {
      "@ps": [
        "./src/ps/index.ts"
      ],
      "@ps/*": [
        "./src/ps/*"
      ],
      "@tsdb": [
        "./src/tsdb/index.ts"
      ],
      "@tsdb/*": [
        "./src/tsdb/*"
      ],
      "@powersync-community/powergit-core": [
        "../../shared/src/index.ts"
      ],
      "@powersync-community/powergit-core/*": [
        "../../shared/src/*"
      ]
    }
  },
  "include": [
    "src",
    "playwright.config.ts",
    "vite-env.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "tests",
    "src/**/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
