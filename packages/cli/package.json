{
  "name": "@powersync-community/powergit",
  "version": "1.2.4",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "powergit": "dist/cli/src/bin.js",
    "git-remote-powergit": "dist/cli/src/git-remote-powergit.js",
    "powergit-daemon": "dist/cli/src/powergit-daemon.js"
  },
  "files": [
    "dist/cli/**",
    "scripts/**",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm --filter @powersync-community/powergit-core build && tsc -p tsconfig.json && chmod +x dist/cli/src/bin.js dist/cli/src/git-remote-powergit.js dist/cli/src/powergit-daemon.js",
    "cli": "tsx src/bin.ts",
    "login": "tsx src/bin.ts login",
    "prepack": "npm run build",
    "postinstall": "node scripts/postinstall.cjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "echo 'stub'",
    "test": "pnpm run build && vitest run"
  },
  "dependencies": {
    "@powersync/common": "1.44.0",
    "@powersync/node": "0.15.0",
    "@powersync-community/powergit-core": "workspace:*",
    "@powersync-community/powergit-daemon": "workspace:*",
    "@powersync-community/powergit-remote-helper": "workspace:*",
    "simple-git": "^3.30.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.7.5",
    "@types/pg": "^8.11.10",
    "@types/yargs": "^17.0.30",
    "tsx": "^4.20.6",
    "pg": "^8.12.0",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  }
}
