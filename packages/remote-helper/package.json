{
  "name": "@powersync-community/powergit-remote-helper",
  "version": "1.2.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "dist/remote-helper/src/index.js",
  "exports": {
    ".": {
      "import": "./dist/remote-helper/src/index.js"
    }
  },
  "bin": {
    "git-remote-powergit": "dist/remote-helper/src/bin.js"
  },
  "files": [
    "dist/remote-helper/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && chmod +x dist/remote-helper/src/bin.js",
    "prepack": "npm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "echo 'stub'",
    "test": "vitest run"
  },
  "dependencies": {
    "@powersync-community/powergit-core": "workspace:*",
    "@supabase/supabase-js": "^2.48.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.7.5",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  }
}
